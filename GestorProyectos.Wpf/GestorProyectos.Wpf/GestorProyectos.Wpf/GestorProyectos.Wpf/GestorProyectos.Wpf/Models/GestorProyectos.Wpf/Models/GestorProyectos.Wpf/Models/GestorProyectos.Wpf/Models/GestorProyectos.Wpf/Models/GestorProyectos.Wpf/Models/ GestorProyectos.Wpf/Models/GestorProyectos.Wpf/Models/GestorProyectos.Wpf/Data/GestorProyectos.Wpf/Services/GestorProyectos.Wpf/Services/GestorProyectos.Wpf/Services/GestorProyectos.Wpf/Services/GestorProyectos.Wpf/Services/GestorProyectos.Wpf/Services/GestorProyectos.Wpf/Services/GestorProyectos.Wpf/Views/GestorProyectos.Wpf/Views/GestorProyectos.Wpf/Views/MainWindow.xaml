<Window x:Class="GestorProyectos.Wpf.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Mi Proyectito - Sistema de Gestión de Proyectos" 
        Height="700" Width="1200"
        WindowStartupLocation="CenterScreen"
        WindowState="Maximized">
    <DockPanel>
        <!-- Barra superior -->
        <Border DockPanel.Dock="Top" 
                Background="#2C3E50" 
                Height="60">
            <Grid Margin="20,0">
                <StackPanel Orientation="Horizontal" 
                           VerticalAlignment="Center">
                    <TextBlock Text="Mi Proyectito" 
                              FontSize="20" 
                              FontWeight="Bold" 
                              Foreground="White"
                              VerticalAlignment="Center"/>
                    <TextBlock Text=" | Sistema de Gestión de Proyectos" 
                              FontSize="14" 
                              Foreground="#BDC3C7"
                              VerticalAlignment="Center"
                              Margin="10,0,0,0"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" 
                           HorizontalAlignment="Right"
                           VerticalAlignment="Center">
                    <TextBlock x:Name="txtUsuarioActual"
                              Text="Usuario: Admin" 
                              Foreground="White"
                              VerticalAlignment="Center"
                              Margin="0,0,15,0"/>
                    <Button Content="Cerrar Sesión" 
                           Background="#E74C3C"
                           Foreground="White"
                           Padding="15,8"
                           BorderThickness="0"
                           Cursor="Hand"
                           Click="BtnCerrarSesion_Click"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Contenido principal -->
        <TabControl Margin="10">
            <!-- Tab Clientes -->
            <TabItem Header="Clientes">
                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                        <Button Content="+ Nuevo Cliente" 
                               Width="130" Height="35"
                               Background="#27AE60"
                               Foreground="White"
                               Click="BtnNuevoCliente_Click"/>
                        <Button Content="Exportar a Excel" 
                               Width="130" Height="35"
                               Margin="10,0,0,0"
                               Background="#3498DB"
                               Foreground="White"
                               Click="BtnExportarClientes_Click"/>
                    </StackPanel>

                    <DataGrid Grid.Row="1" 
                             x:Name="dgClientes"
                             AutoGenerateColumns="False"
                             CanUserAddRows="False"
                             IsReadOnly="True">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="50"/>
                            <DataGridTextColumn Header="Nombre" Binding="{Binding Nombre}" Width="*"/>
                            <DataGridTextColumn Header="Empresa" Binding="{Binding Empresa}" Width="*"/>
                            <DataGridTextColumn Header="Email" Binding="{Binding Email}" Width="*"/>
                            <DataGridTextColumn Header="Teléfono" Binding="{Binding Telefono}" Width="120"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </TabItem>

            <!-- Tab Proyectos -->
            <TabItem Header="Proyectos">
                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                        <Button Content="+ Nuevo Proyecto" 
                               Width="130" Height="35"
                               Background="#27AE60"
                               Foreground="White"
                               Click="BtnNuevoProyecto_Click"/>
                        <Button Content="Exportar a Excel" 
                               Width="130" Height="35"
                               Margin="10,0,0,0"
                               Background="#3498DB"
                               Foreground="White"
                               Click="BtnExportarProyectos_Click"/>
                    </StackPanel>

                    <DataGrid Grid.Row="1" 
                             x:Name="dgProyectos"
                             AutoGenerateColumns="False"
                             CanUserAddRows="False"
                             IsReadOnly="True">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="50"/>
                            <DataGridTextColumn Header="Nombre" Binding="{Binding Nombre}" Width="*"/>
                            <DataGridTextColumn Header="Cliente" Binding="{Binding Cliente.Nombre}" Width="*"/>
                            <DataGridTextColumn Header="Estado" Binding="{Binding Estado}" Width="120"/>
                            <DataGridTextColumn Header="Presupuesto" Binding="{Binding Presupuesto, StringFormat=C}" Width="120"/>
                            <DataGridTextColumn Header="Fecha Inicio" Binding="{Binding FechaInicio, StringFormat=dd/MM/yyyy}" Width="100"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </TabItem>

