<Window x:Class="GestorProyectos.Wpf.Views.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Mi Proyectito - Iniciar Sesión" 
        Height="400" Width="450"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="#ECF0F1">
    <Grid>
        <Border Background="White" 
                CornerRadius="10" 
                Margin="40" 
                Padding="30"
                Effect="{StaticResource DropShadow}">
            <Border.Effect>
                <DropShadowEffect BlurRadius="20" 
                                  ShadowDepth="0" 
                                  Opacity="0.2"/>
            </Border.Effect>
            
            <StackPanel>
                <!-- Logo/Título -->
                <TextBlock Text="Mi Proyectito" 
                          FontSize="28" 
                          FontWeight="Bold" 
                          HorizontalAlignment="Center"
                          Foreground="#2C3E50"
                          Margin="0,0,0,10"/>
                
                <TextBlock Text="Sistema de Gestión de Proyectos" 
                          FontSize="12" 
                          HorizontalAlignment="Center"
                          Foreground="#7F8C8D"
                          Margin="0,0,0,30"/>

                <!-- Usuario -->
                <TextBlock Text="Usuario:" 
                          FontWeight="SemiBold"
                          Margin="0,0,0,5"/>
                <TextBox x:Name="txtUsuario" 
                        Height="35"
                        Padding="10,8"
                        FontSize="14"
                        Margin="0,0,0,15"/>

                <!-- Contraseña -->
                <TextBlock Text="Contraseña:" 
                          FontWeight="SemiBold"
                          Margin="0,0,0,5"/>
                <PasswordBox x:Name="txtPassword" 
                            Height="35"
                            Padding="10,8"
                            FontSize="14"
                            Margin="0,0,0,25"/>

                <!-- Botón Ingresar -->
                <Button x:Name="btnIngresar"
                       Content="Ingresar" 
                       Height="40"
                       FontSize="14"
                       FontWeight="SemiBold"
                       Background="#27AE60"
                       Foreground="White"
                       BorderThickness="0"
                       Cursor="Hand"
                       Click="BtnIngresar_Click">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="#27AE60"/>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#229954"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>

                <!-- Copyright -->
                <TextBlock Text="© 2025 Marcos Slavutzky" 
                          FontSize="10" 
                          HorizontalAlignment="Center"
                          Foreground="#95A5A6"
                          Margin="0,20,0,0"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
